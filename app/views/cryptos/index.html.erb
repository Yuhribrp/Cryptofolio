<div class="page-wrap">
  <header class="page-header">
    <article>
      <details>
        <summary>Financial Market News</summary>
        <h4>blabla</h4>
      </details>
    </article>
  </header>
  <nav class="page-nav">
    <article>
      <details>
        <summary>Crypto Trending</summary>
        <h4>blabla</h4>
      </details>
    </article>
  </nav>
  <main class="page-main">
    <div class="title">
      <h3>User Portifolio</h3>
    </div>
    <%= link_to "Add Crypto", new_crypto_path, class: "btn btn-dark", type: "button", id: "add-btn" %>
    <br/><br/><br/>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Cost Paid</th>
            <th>Amount Owned</th>
            <th>Current Price</th>
            <th>Current Total Value</th>
            <th>Toal Paid</th>
            <th>Profit/Loss</th>
            <th>
              <select>
                <option value="1">1 Hour Change</option>
                <option value="2">1 Day Change</option>
                <option value="1">1 Week Change</option>
              </select>
            </th>
          </tr>
        </thead>
        <tbody>
            <% @user_cryptos.each do |crypto| %>
              <% crypto.symbol.upcase! %>
                <% @coins&.dig('data').each do |coin| %>
                  <% if crypto.symbol.upcase.eql?(coin&.dig('symbol')) %>
                    <tr>
                      <td><%= coin['name'] %></td>
                      <td>$<%= crypto.unit_price %></td>
                      <td><%= crypto.amount_owned %></td>
                      <td>$<%= coin['quote']['USD']['price'] %></td>
                      <td>$<%= coin['quote']['USD']['price'].to_d * crypto.amount_owned %></td>
                      <td>$<%= crypto.unit_price * crypto.amount_owned %></td>
                      <td><%= number_to_currency((coin['quote']['USD']['price'].to_d * crypto.amount_owned) - (crypto.unit_price * crypto.amount_owned)) %></td>
                      <td><%= coin['quote']['USD']['percent_change_1h'] %>%</td>
                    </tr>
                  <% end %>
                <% end %>
            <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <br/>
    </div>
  </main>
  <aside class="page-sidebar">
    <table id="Table">
      <tr class="header" id="tr-header">
        <th style="width:60%;">Name</th>
        <th style="width:40%;">Value</th>
      </tr>
      <% for x in @coins['data'] %>
        <% for coin in @cryptos_list %>
          <% if coin.eql?(x['symbol']) %>
            <tr>
              <td id="td-header"><%= x['name'] %></td>
              <td id="td-header">$<%= x['quote']['USD']['price'] %></td>
            </tr>

          <% end %>
        <% end %>
      <% end %>
    </table>
  </aside>
</div>
