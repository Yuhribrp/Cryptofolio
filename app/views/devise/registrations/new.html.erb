<div class="form-screen" style="background-image: linear-gradient(-225deg, rgba(400,71,198,0.1) 0%, rgba(0,36,61,0.3) 93%), url(<%= image_path 'eth-bg.jpg' %>);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs" id="formInputs">
            <h4>Sign up</h4>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn btn-primary", id: "form-btn" %>
            </div>
            <div class="sign-up-link">
              <%= link_to "Log in", new_user_session_path %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
