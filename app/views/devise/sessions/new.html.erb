<div class="form-screen" style="background-image: linear-gradient(-225deg, rgba(400,71,198,0.1) 0%, rgba(0,36,61,0.3) 93%), url(<%= image_path 'eth-bg.jpg' %>);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-4 mb-2 d-flex justify-content-center" id="formResponsive">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs" id="formInputs">
            <h4>Sign in</h4>
            <br/>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>

            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-primary", id: "form-btn" %>
            </div>
            <div class="sign-up-link">
              <%= link_to "Sign Up", new_user_registration_path %>
            </div>
            <button type="button" class="btn" id= "modal-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Forgot your passowrd?
            </button>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Reset Password Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" id="custom-modal">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Forgot your password?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "devise/passwords/new" %>
      </div>
    </div>
  </div>
</div>
