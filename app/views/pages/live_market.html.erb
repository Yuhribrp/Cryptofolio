        method: :get,
        html: {class: "mb-4", data: {search_coins_target: "form"}} do |f|
      %>
        <%= f.text_field :text,
          class: "form-control",
          id: "myInput",
          placeholder: "Search for Cryptos..",
          value: params[:text],
          data: {
            search_coins_target: "input",
            action: "keyup->search-coins#cryptoSearchEngine"
          }
        %>
      <% end %>
    </div>
